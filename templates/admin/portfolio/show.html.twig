{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block body %}
    <h1>Portfolio</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ portfolio.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ portfolio.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ portfolio.date ? portfolio.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ portfolio.resume }}</td>
            </tr>
            <tr>
                <th>CoverPicture</th>
                <td>{{ portfolio.coverPicture }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ portfolio.updatedAt ? portfolio.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('portfolio_index') }}">back to list</a>

    <a href="{{ path('portfolio_edit', {'id': portfolio.id}) }}">edit</a>

    {{ include('portfolio/_delete_form.html.twig') }}
{% endblock %}
