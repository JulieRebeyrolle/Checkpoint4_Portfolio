{% extends 'adminbase.html.twig' %}

{% block title %}{{ parent() }} {{ portfolio.name }}{% endblock %}

{% block body %}
<div class="content-container container">
    <a href="{{ path('admin_portfolio_index') }}" class="btn btn-primary mt-3">Retour Ã  la liste</a>

    <h1 class="font-weight-bold text-dark text-center pt-5 pb-2">Projet : {{ portfolio.name }}</h1>

    <div class="content-container container">

    <table class="table">
        <tbody>
            <tr>
                <th>CoverPicture</th>
                <td class="text-center"><img class="cover-picture-admin" src="/uploads/images/covers/{{ portfolio.coverPicture }}" alt="{{ portfolio.name }} picture"></td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ portfolio.name }}</td>
            </tr>
            <tr>
                <th>Github</th>
                <td><a href="{{ portfolio.github }}" target="_blank">Lien Github</a></td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ portfolio.date ? portfolio.date|date('m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ portfolio.resume }}</td>
            </tr>
        </tbody>
    </table>

        <div class="text-center py-5">
            <a href="{{ path('admin_portfolio_edit', {'id': portfolio.id}) }}" class="btn btn-secondary">Modifier</a>
        </div>

    {{ include('admin/portfolio/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
