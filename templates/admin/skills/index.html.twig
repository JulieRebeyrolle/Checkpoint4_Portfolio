{% extends 'base.html.twig' %}

{% block title %}Skills index{% endblock %}

{% block body %}
    <h1>Skills index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Label</th>
                <th>Category</th>
                <th>ShowOnCv</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for skill in skills %}
            <tr>
                <td>{{ skill.id }}</td>
                <td>{{ skill.name }}</td>
                <td>{{ skill.label }}</td>
                <td>{{ skill.category }}</td>
                <td>{{ skill.showOnCv ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('skills_show', {'id': skill.id}) }}">show</a>
                    <a href="{{ path('skills_edit', {'id': skill.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('skills_new') }}">Create new</a>
{% endblock %}
