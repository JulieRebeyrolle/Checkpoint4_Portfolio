{% extends 'adminbase.html.twig' %}

{% block title %}{{ parent() }} {{ curriculum_vitae.place }}{% endblock %}

{% block body %}
<div class="content-container container">

<a href="{{ path('admin_cv_index') }}" class="btn btn-primary mt-3">Retour à la liste</a>
    <h1 class="font-weight-bold text-dark text-center pt-5 pb-2">{{ curriculum_vitae.place }}</h1>

    <div class="content-container container">
    <table class="table">
        <tbody>
            <tr>
                <th>Intitulé</th>
                <td>{{ curriculum_vitae.title }}</td>
            </tr>
            <tr>
                <th>Ecole / Entreprise</th>
                <td>{{ curriculum_vitae.place }}</td>
            </tr>
            <tr>
                <th>Début</th>
                <td>{{ curriculum_vitae.startingDate ? curriculum_vitae.startingDate|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ curriculum_vitae.endingDate ? curriculum_vitae.endingDate|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Détails</th>
                <td>{{ curriculum_vitae.resume }}</td>
            </tr>
        </tbody>
    </table>

    <div class="text-center py-5">
        <a href="{{ path('admin_cv_edit', {'id': curriculum_vitae.id}) }}" class="btn btn-secondary">Mettre à jour</a>
    </div>

    {{ include('admin/curriculum_vitae/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
