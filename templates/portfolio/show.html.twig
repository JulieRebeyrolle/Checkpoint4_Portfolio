{% block title %}{{ parent() }} {{ portfolio.name }}{% endblock %}

{% block body %}
<div class="content-container container">
    <a href="{{ path('portfolio_index') }}" class="btn btn-primary mt-3">Retour Ã  la liste</a>

    <h1 class="font-weight-bold text-dark text-center pt-5">Projet : {{ portfolio.name }}</h1>
